<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/GreenSheen"
    tools:context=".MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/DutchWhite"
            android:textColor="@color/YankeesBlue"
            android:textSize="30sp"
            android:gravity="left|bottom"
            android:layout_marginBottom="10dp"
            android:text="0" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:background="@color/Shandy"
            android:columnCount="3">
            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="1"
                android:textSize="30dp"
                android:onClick="press1"/>
            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="2"
                android:textSize="30dp"
                android:onClick="press2"/>
            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="3"
                android:textSize="30dp"
                android:onClick="press3"/>
            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="4"
                android:textSize="30dp"
                android:onClick="press4"/>
            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="5"
                android:textSize="30dp"
                android:onClick="press5"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="6"
                android:textSize="30dp"
                android:onClick="press6"/>
            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="7"
                android:textSize="30dp"
                android:onClick="press7"/>
            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="8"
                android:textSize="30dp"
                android:onClick="press8"/>
            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="@color/DarkVanilla"
                android:text="9"
                android:textSize="30dp"
                android:onClick="press9"/>

        </GridLayout>

    </LinearLayout>



</LinearLayout>

