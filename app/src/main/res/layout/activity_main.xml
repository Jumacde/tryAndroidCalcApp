<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/GreenSheen"
    tools:context=".MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@color/DutchWhite"
            android:gravity="left|bottom"
            android:text="0"
            android:textColor="@color/YankeesBlue"
            android:textSize="30sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Shandy"
            android:columnCount="3"
            android:padding="10sp">

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press1"
                android:text="1"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press2"
                android:text="2"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press3"
                android:text="3"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press4"
                android:text="4"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press5"
                android:text="5"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press6"
                android:text="6"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press7"
                android:text="7"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press8"
                android:text="8"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press9"
                android:text="9"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="press0"
                android:text="0"
                android:textColor="@color/CosmicLatte"
                android:textSize="30dp" />

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="point"
                android:text="."
                android:textColor="@color/WintergreenDream"
                android:textSize="30dp" />

            <Button
                android:id="@+id/plass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:text="+"
                android:textColor="@color/WintergreenDream"
                android:textSize="40dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:text="-"
                android:textColor="@color/WintergreenDream"
                android:textSize="40dp" />

            <Button
                android:id="@+id/multy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:text="x"
                android:textColor="@color/WintergreenDream"
                android:textSize="40dp" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:text="รท"
                android:textColor="@color/WintergreenDream"
                android:textSize="40dp" />

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:backgroundTint="@color/DarkVanilla"
                android:onClick="ac"
                android:text="A/C"
                android:textColor="@color/WintergreenDream"
                android:textSize="27dp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/CosmicLatte"
                android:text="="
                android:textColor="@color/GreenSheen"
                android:textSize="40dp" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>

